#param=X11rdp
#param=-bs
#param=-nolisten
#param=tcp
#param=-uds

#[Xvnc]
#param=Xvnc
#param=-bs
#param=-nolisten
#param=tcp
#param=-localhost
#param=-dpi
#param=96

[Xorg]
param=Xorg
param=-config
param=xrdp/xorg.conf
param=-noreset
param=-nolisten
param=tcp
param=-logfile
param=.xorgxrdp.%s.log

[Chansrv]
; drive redirection, defaults to xrdp_client if not set
FuseMountName=redirected_drives

[SessionVariables]
PULSE_SCRIPT=/etc/xrdp/pulse/default.pa
